<h1>Editing Book</h1>

<%= form_with model: @book, url: '/books',method: :post do |f| %>

  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>